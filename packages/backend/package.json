{
  "name": "quadlet",
  "displayName": "Podman Quadlet",
  "description": "Manage, generate Podman Quadlet",
  "version": "0.13.0-next",
  "icon": "icon.png",
  "publisher": "podman-desktop",
  "type": "module",
  "license": "Apache-2.0",
  "engines": {
    "podman-desktop": ">=1.10.0"
  },
  "main": "./dist/extension.cjs",
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "watch": "vite --mode development build -w"
  },
  "contributes": {
    "configuration": {
      "title": "Podman Quadlet",
      "properties": {
        "podman-quadlet.preferredContainerEngineConnection": {
          "type": "string",
          "description": "Preferred Container Engine Connection.",
          "hidden": true
        }
      }
    },
    "icons": {
      "quadlet-icon": {
        "description": "Quadlet icon",
        "default": {
          "fontPath": "quadlet-icon.woff2",
          "fontCharacter": "\\EA02"
        }
      }
    },
    "views": {
      "icons/containersList": [
        {
          "when": "PODMAN_SYSTEMD_UNIT in containerLabelKeys",
          "icon": "${quadlet-icon}"
        }
      ]
    },
    "menus": {
      "dashboard/container": [
        {
          "command": "podlet.generate.container",
          "title": "Generate Quadlet"
        }
      ],
      "dashboard/compose": [
        {
          "command": "podlet.compose",
          "title": "Generate Quadlet"
        }
      ]
    },
    "commands": [
      {
        "command": "podlet.generate.container",
        "title": "Podlet: generate"
      },
      {
        "command": "podlet.compose",
        "title": "Podlet: compose"
      }
    ]
  },
  "devDependencies": {
    "@podman-desktop/quadlet-extension-core-api": "workspace:^",
    "@podman-desktop/api": "^1.25.1",
    "@podman-desktop/podman-extension-api": "^1.18.0",
    "@types/node": "^24",
    "@types/ssh2": "^1.15.5",
    "@types/ssh2-sftp-client": "^9.0.6",
    "prettier": "^3.8.1",
    "typescript": "5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.16",
    "@codecov/vite-plugin": "^1.9.1",
    "@types/js-yaml": "^4.0.9"
  },
  "dependencies": {
    "js-ini": "^1.6.0",
    "semver": "^7.7.4",
    "js-yaml": "^4.1.1",
    "podlet-js": "workspace:^",
    "ssh2": "^1.17.0",
    "ssh2-sftp-client": "^12.0.1"
  }
}
