{
  "name": "quadlet",
  "displayName": "Podman Quadlet",
  "description": "Manage, generate Podman Quadlet",
  "version": "0.6.0",
  "icon": "icon.png",
  "publisher": "axel7083",
  "type": "module",
  "license": "Apache-2.0",
  "engines": {
    "podman-desktop": ">=1.10.0"
  },
  "main": "./dist/extension.cjs",
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "watch": "vite --mode development build -w"
  },
  "contributes": {
    "icons": {
      "quadlet-icon": {
        "description": "Quadlet icon",
        "default": {
          "fontPath": "quadlet-icon.woff2",
          "fontCharacter": "\\EA02"
        }
      }
    },
    "views": {
      "icons/containersList": [
        {
          "when": "PODMAN_SYSTEMD_UNIT in containerLabelKeys",
          "icon": "${quadlet-icon}"
        }
      ]
    },
    "menus": {
      "dashboard/container": [
        {
          "command": "podlet.generate.container",
          "title": "Generate Quadlet"
        }
      ],
      "dashboard/compose": [
        {
          "command": "podlet.compose",
          "title": "Generate Quadlet"
        }
      ]
    },
    "commands": [
      {
        "command": "podlet.generate.container",
        "title": "Podlet: generate"
      },
      {
        "command": "podlet.compose",
        "title": "Podlet: compose"
      }
    ]
  },
  "devDependencies": {
    "@podman-desktop/api": "^1.15.0",
    "@podman-desktop/podman-extension-api": "next",
    "@types/node": "^20",
    "@types/tar-fs": "^2.0.4",
    "@types/unzipper": "^0.10.10",
    "@vitest/coverage-v8": "^2.1.6",
    "prettier": "^3.4.2",
    "typescript": "5.7.2",
    "vite": "^6.0.7",
    "vitest": "^2.1.6",
    "xz-decompress": "^0.2.2",
    "@types/js-yaml": "^4.0.9"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "js-ini": "^1.6.0",
    "semver": "^7.6.3",
    "tar-fs": "^3.0.6",
    "unzipper": "^0.11.6",
    "js-yaml": "^4.1.0"
  }
}
